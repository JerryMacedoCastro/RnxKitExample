{
  "$schema": "http://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "outDir": "./lib",
    "forceConsistentCasingInFileNames": true,
    "jsx": "react-native",
    "declaration": true,
    "sourceMap": true,
    "declarationMap": true,
    "inlineSources": true,
    "experimentalDecorators": true,
    "strict": true,
    "esModuleInterop": true,
    "types": ["node", "react", "jest"],
    "module": "commonjs",
    "target": "es2017",
    "lib": ["es2017", "DOM", "ES2018"],
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "include": [".src/"],
  "exclude": ["./**/__tests__/**", "./__mocks__/**", "./**/*.test.ts", "./**/*.test.tsx"]
}
